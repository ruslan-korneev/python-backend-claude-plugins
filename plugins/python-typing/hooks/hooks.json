{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "tool_name": "Edit",
          "file_paths": ["**/*.py"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "mypy \"$CLAUDE_FILE_PATH\" --no-error-summary 2>/dev/null | head -20 || true"
          }
        ]
      },
      {
        "matcher": {
          "tool_name": "Write",
          "file_paths": ["**/*.py"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "mypy \"$CLAUDE_FILE_PATH\" --no-error-summary 2>/dev/null | head -20 || true"
          }
        ]
      }
    ]
  }
}
