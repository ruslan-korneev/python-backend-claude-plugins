{
  "hooks": [
    {
      "event": "PostToolUse",
      "matcher": {
        "tool_name": "Edit",
        "file_paths": ["**/*.py"]
      },
      "hooks": [
        {
          "type": "command",
          "command": "ruff format \"$CLAUDE_FILE_PATH\" 2>/dev/null; ruff check --fix --unsafe-fixes \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
        }
      ]
    },
    {
      "event": "PostToolUse",
      "matcher": {
        "tool_name": "Write",
        "file_paths": ["**/*.py"]
      },
      "hooks": [
        {
          "type": "command",
          "command": "ruff format \"$CLAUDE_FILE_PATH\" 2>/dev/null; ruff check --fix --unsafe-fixes \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
        }
      ]
    }
  ]
}
